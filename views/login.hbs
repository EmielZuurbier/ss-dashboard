<section class="admin">
	<header class="admin-header">
		<h2>Smartsensor Admin</h2>
		<p>This is the administration page. To use the Smartsensor Dashboard, please login or create an account.</p>
	</header>
	{{#if auth}}
	<div class="admin-user">
		<h3>Welcome <span>{{user.username}}</span></h3>
		<a href="/admin/logout" class="button">Logout</a>
	</div>
	{{else}}
	<form class="admin-form" action="/admin/login" method="post">
		<fieldset>
			<legend>Login or <a href="/admin/register">create an account</a></legend>
			<div class="admin-input-group">
				<input type="text" name="username" id="username" required>
				<label for="username">Username</label>
			</div>
			<div class="admin-input-group">
				<input type="password" name="password" id="password" required>
				<label for="password">Password</label>
			</div>
			<button type="submit" class="submit">Login</button>
		</fieldset>
	</form>
	{{/if}}
</section>